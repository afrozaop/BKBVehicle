

@model BKBVehicle.Models.VehicleAppModel.CarInfoViewModel

@{
    ViewBag.Title = "CreateColor";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
      
        <h4>@TempData["retMsg"]</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">

            <div class="col-md-4">
                @Html.Label("Add Colors")
                @Html.EditorFor(model => model.Color, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.Color, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default btn-primary" />
                @Html.ActionLink("Cancel", "ColorIndex", null, new { @class = "btn btn-default btn-primary" })
            </div>
        </div>
    </div>


}
