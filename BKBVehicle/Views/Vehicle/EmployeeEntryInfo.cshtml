

@model IEnumerable<BKBVehicle.DataModel.EmployeeInfo>
@{
    ViewBag.Title = "EmployeeEntryInfo";
}

<h2 align="middle">Employee Entry Edit</h2>
<br>
<table class="table table-striped table-bordered" id="search" style="width:100%">

    <thead>
        <tr>
            <th>PFEN</th>
            <th>EmpNameEN</th>
            <th>PFBN</th>
            <th>EmpNameBN</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PFEN)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.EmpNameEN)
                </td>

                <td>
                  
                    @Html.DisplayFor(modelItem => item.PFBN)
                </td>
                <td>
                    
                    @Html.DisplayFor(modelItem => item.EmpNameBN)
                </td>
         
                <td>
                    @Html.ActionLink("Edit", "EmployeeEntryEdit", new { id = item.id })
                   
                </td>
            </tr>
        }
    </tbody>
</table>

