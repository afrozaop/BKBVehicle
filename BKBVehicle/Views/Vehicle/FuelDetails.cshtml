@model BKBVehicle.Models.VehicleAppModel.Fuel_DetailsViewModel

@{
    ViewBag.Title = "FuelDetails";
}

<h2>Fuel Details</h2>
@using (Html.BeginForm("approvalFuel", "Vehicle", FormMethod.Post))
{

    <div>
        <dl class="dl-horizontal">
            @Html.HiddenFor(model => model.id)
            <dt>
                @Html.DisplayNameFor(model => model.RegistrationNo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RegistrationNo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.FuelDate)
            </dt>

            <dd>
                @Convert.ToDateTime(Model.FuelDate).ToString("dd-MM-yyyy")
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.FuelConsumptionCost)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FuelConsumptionCost)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.BillNo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.BillNo)
            </dd>


            <dt>
                @Html.DisplayNameFor(model => model.FuelType)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FuelType)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UsedBy)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UsedBy)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Driver)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Driver)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UsedByPF)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UsedByPF)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DriverPF)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DriverPF)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Rate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Rate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.FuelQuantity)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FuelQuantity)
            </dd>



        </dl>



        <div class="row">
            <div class="col-xs-5">
            </div>

            <div class="col-xs-5">
                @if ((@Session["UserRoleId"]).ToString() == "1" || (@Session["UserRoleId"]).ToString() == "10")
                {
                    <input type="submit" id="btnApprove" name="btn" value="Approve" class="btn btn-success" />

                }

            </div>
            <div class="col-xs-4">
            </div>
        </div>
    </div>
}
    