@model BKBVehicle.Models.VehicleAppModel.MaintenanceViewModel

@{
    ViewBag.Title = "MaintenanceDetails";
}

<h2>MaintenanceDetails</h2>
@using (Html.BeginForm("approvalMaintenance", "Vehicle", FormMethod.Post))
{
    <div>
        <h4>MaintenanceViewModel</h4>
        <hr />
        <dl class="dl-horizontal">
            @Html.HiddenFor(model => model.id)
            <dt>
                @Html.DisplayNameFor(model => model.RegistrationNo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.RegistrationNo)
            </dd>





            <dt>
                @Html.DisplayNameFor(model => model.MaintenanceDate)
            </dt>

            <dd>
                @Convert.ToDateTime(Model.MaintenanceDate).ToString("dd-MM-yyyy")
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MaintenanceParts)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaintenanceParts)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MaintenanceCost)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaintenanceCost)
            </dd>



            <dt>
                @Html.DisplayNameFor(model => model.UnitQ)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UnitQ)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.UsedBy)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UsedBy)
            </dd>



            <dt>
                @Html.DisplayNameFor(model => model.Driver)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Driver)
            </dd>


        </dl>



        <div class="row">
            <div class="col-xs-5">
            </div>

            <div class="col-xs-5">
                @if ((@Session["UserRoleId"]).ToString() == "1"|| (@Session["UserRoleId"]).ToString() == "10")
                {
                    <input type="submit" id="btnApprove" name="btn" value="Approve" class="btn btn-success" />

                }

            </div>
            <div class="col-xs-4">
            </div>
        </div>
    </div>
        }
    