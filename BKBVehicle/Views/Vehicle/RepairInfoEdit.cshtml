
@*@model BKBVehicle.Models.VehicleAppModel.RepairViewModel*@
@model IEnumerable<BKBVehicle.Models.VehicleAppModel.RepairViewModel>
    @{
        ViewBag.Title = "RepairInfoEdit";
    }


    <h2 align="middle">Repair Information Edit</h2>
    <br>
    <h2 align="middle" style="color: red">@TempData["ShowSms"]</h2>
    <h4 style="color:red">@TempData["retMsg"]</h4>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @if (Model != null)
    {
        for (var i = 0; i < Model.Count(); i++)
        {
            <div class="row">
                <div class="col-md-4">
                    @Html.Label("গাড়ির নম্বর")
                    @Html.EditorFor(model => model.ToList()[i].RegistrationNo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ToList()[i].RegistrationNo, "", new { @class = "text-danger" })

                </div>

                <div class="col-md-4">

                    @Html.Label("তারিখ")
                    @Html.EditorFor(model => model.ToList()[i].RepairDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                    @Html.ValidationMessageFor(model => model.ToList()[i].RepairDate, "", new { @class = "text-danger" })
                </div>

                <div class="col-md-4">
                    @Html.Label("বিলের নম্বর")
                    @Html.EditorFor(model => model.ToList()[i].BillNo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ToList()[i].BillNo, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    @Html.Label("প্রতিষ্ঠানের নাম")
                    @Html.EditorFor(model => model.ToList()[i].OrganizationName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ToList()[i].OrganizationName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    @Html.Label("মেরামতের যন্ত্রাংশ")
                    @Html.EditorFor(model => model.ToList()[i].RepairPs, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ToList()[i].RepairPs, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    @Html.Label("পরিমাণ")
                    @Html.EditorFor(model => model.ToList()[i].RepairCs, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ToList()[i].RepairCs, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    @Html.Label("মেরামতের খরচ")
                    @Html.EditorFor(model => model.ToList()[i].RepairQs, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ToList()[i].RepairQs, "", new { @class = "text-danger" })
                </div>

            </div>

        }
    }
    <br>
    <div class="row">



        <div class="col-md-offset-6 col-md-6">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </div>
</div>
    }

    @*<script src="~/scripts/jquery-3.6.0.min.js"></script>*@
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @*<script src="~/Scripts/jquery-1.12.4.min.js"></script>*@
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script src="~/scripts/select2.min.js"></script>
    <link href="~/Content/css/select2.min.css" rel="stylesheet" />

