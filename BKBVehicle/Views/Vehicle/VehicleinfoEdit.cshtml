@model BKBVehicle.Models.VehicleAppModel.CarInfoViewModel

@{
    ViewBag.Title = "VehicleInfoEdit";
}


<h2 align="middle">Vehicle Information Edit</h2>
<br>
<h2 align="middle" style="color: red">@TempData["ShowSms"]</h2>
<h4 style="color:red">@TempData["retMsg"]</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @*<h4>Car_Info</h4>
            <hr />*@
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-md-4">

                @Html.Label("অফিসের নাম")
                @*@Html.DropDownListFor(model => model.OfficeName, ViewBag.OFFICELIST as SelectList, "--Select Office--", new { @class = "form-control", @tabindex = "3" })*@
                @Html.DropDownListFor(model => model.OfficeName, new SelectList(ViewBag.OFFICELIST, "value", "text"), "Select List",
                          new { @class = "form-control input-sm", @id = "OfficeName" })
                @*@Html.EditorFor(model => model.OfficeName, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.OfficeName, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-4">
                @Html.Label("যানবাহনের ধরন")
                @*@Html.DropDownListFor(model => model.VehicleType, ViewBag.VEHICLEList as SelectList, "--Select Vehicle--", new { @class = "form-control", @tabindex = "3" })*@
                @Html.DropDownListFor(model => model.VehicleType, new SelectList(ViewBag.VEHICLEList, "value", "text"), "Select List",
    new { @class = "form-control input-sm", @id = "VehicleType" })
                @Html.ValidationMessageFor(model => model.VehicleType, "", new { @class = "text-danger" })

            </div>

            <div class="col-md-4">

                @Html.Label("গাড়ির নম্বর")

                @*@Html.EditorFor(model => model.RegistrationNo, new { htmlAttributes = new { @class = "form-control", pattern = "[A-Za-z]+-Metro-[A-Za-z]+-[0-9]{4}", required = "required" } })*@
                @Html.EditorFor(model => model.RegistrationNo, new { htmlAttributes = new { @class = "form-control", @type = "text", id = "customInput", name = "customInput", pattern = "^[A-Za-z]+-Metro-[A-Za-z]+-[0-9]{2}-[0-9]{4}", required = "required" } })

                @Html.ValidationMessageFor(model => model.RegistrationNo, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="row">
            <div class="col-md-4">

                @Html.Label("ব্রান্ডের নাম")

                @Html.EditorFor(model => model.BrandName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Manufacturer, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4">

                @Html.Label("প্রস্তুতকারক")

                @Html.EditorFor(model => model.Manufacturer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Manufacturer, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-4">
                @Html.Label("উৎপাদন বর্ষ")

                @Html.EditorFor(model => model.ProductionYear, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ProductionYear, "", new { @class = "text-danger" })

            </div>



        </div>
        <div class="row">
            <div class="col-md-4">

                @Html.Label("রং")

                @Html.DropDownListFor(model => model.Color, new SelectList(ViewBag.ColorList, "value", "text"), "Select List",
          new { @class = "form-control input-sm", @id = "Color" })
                @Html.ValidationMessageFor(model => model.Color, "", new { @class = "text-danger" })

            </div>
            <div class="col-md-4">

                @Html.Label("চেসিস নং")

                @Html.EditorFor(model => model.ChesisNo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ChesisNo, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-4">
                @Html.Label("ইঞ্জিন নং")

                @Html.EditorFor(model => model.EngineNo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EngineNo, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                @Html.Label("ক্রয়মূল‌্য")

                @Html.EditorFor(model => model.PurchaseValue, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PurchaseValue, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                @Html.Label("ক্রয়ের তারিখ")
                @Html.TextBoxFor(m => m.PurchaseDate, "{0:yyyy-MM-dd}", new { @type = "date" })
                @*@Html.EditorFor(model => model.PurchaseDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })*@
                @Html.ValidationMessageFor(model => model.PurchaseDate, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-4">
                @Html.Label("মন্তব‌্য")

                @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
            </div>

        </div>
        <br>

        <br>
        <div class="row">



            <div class="col-md-offset-6 col-md-6">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

